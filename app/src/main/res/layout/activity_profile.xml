<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numberListContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/icon_profile"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="18dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Ngo Quoc Quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/ButtonLogin"
            android:id="@+id/btn_profile_setting"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="Profile Setting" />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-50dp"
            android:id="@+id/btn_profile_setting1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/edit_profile_img" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/ButtonLogin"
            android:id="@+id/btn_mode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="System Setting" />

        <ImageView
            android:scaleType="fitCenter"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-50dp"
            android:id="@+id/btn_mode1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/setting_app" />

    </LinearLayout>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_marginTop="150dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            style="@style/ButtonLogOut"
            android:id="@+id/btn_log_out"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/black"
            android:text="Log Out" />
        <LinearLayout
            android:background="@drawable/background_menu"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginLeft="75dp"
                android:id="@+id/btn_Home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/home" />

            <ImageView
                android:layout_marginRight="20dp"

                android:padding="10dp"
                android:id="@+id/btn_addQuiz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/add" />

            <ImageView
                android:layout_marginRight="20dp"

                android:padding="10dp"
                android:id="@+id/btnLibrary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/library" />

            <ImageView
                android:padding="10dp"
                android:id="@+id/btnUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>