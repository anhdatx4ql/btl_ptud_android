<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numberListContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlayQuizActivity">

    <RelativeLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/txtNumberQuestion"
            android:textSize="18sp"
            android:text="Question 1/10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/questionProgress"
        android:progress="10"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/background_question"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Day la cau hoi thu nhat trong Quiz"
                android:id="@+id/txtQuestionTitle"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <Button
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:text="A: 12 3 4 5"
                android:layout_marginTop="10dp"
                android:backgroundTint="#78AF3C"
                android:id="@+id/btnAnswerA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:text="A: 12 3 4 5"
                android:layout_marginTop="10dp"
                android:backgroundTint="#78AF3C"
                android:id="@+id/btnAnswerB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:text="A: 12 3 4 5"
                android:layout_marginTop="10dp"
                android:backgroundTint="#78AF3C"
                android:id="@+id/btnAnswerC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:text="A: 12 3 4 5"
                android:layout_marginTop="10dp"
                android:backgroundTint="#78AF3C"
                android:id="@+id/btnAnswerD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:layout_gravity="end"
                android:textSize="14sp"
                android:text="Next"
                android:layout_marginTop="10dp"
                android:backgroundTint="#E6D747"
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edt"
                android:textColor="#2CD334"
                android:textStyle="bold"
                android:id="@+id/txtIsCorrect"
                android:text="Đúng Rồi!"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edt"
                android:textColor="#EB0E15"
                android:textStyle="bold"
                android:id="@+id/txtIsNotCorrect"
                android:text="Sai Mất Rồi :( "
                android:gravity="center"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>